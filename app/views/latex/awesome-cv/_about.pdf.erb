  <% if @personal_information.zipCode.present? %>
    <% if @personal_information.street.present? %>
    ,
    <% end %>%
    <%= @personal_information.zipCode %>
  <% end %>%
  <% if @personal_information.town.present? %>
    <% if @personal_information.street.present? ||  @personal_information.street.present? %>
    ,
    <% end %>%
    <%= @personal_information.town %>
  <% end %>%
  }
<% end %>
<% if @personal_information.phone.present? %>
\mobile{<%= @personal_information.phone %>}
<% end %>

\email{<%= @personal_information.email %>}
<% if @personal_information.homepage.present? %>
\homepage{<%= @personal_information.homepage %>}
<% end %>
<% if @personal_information.github.present? %>
